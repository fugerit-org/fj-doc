			</dependency>
		
		</dependencies>

	</dependencyManagement>

	<build>

		<pluginManagement>
		
			<plugins>
			
				<plugin>
					<groupId>org.codehaus.mojo</groupId>
					<artifactId>jaxb2-maven-plugin</artifactId>
					<version>3.1.0</version>
