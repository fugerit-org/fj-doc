				<artifactId>fj-doc-val-core</artifactId>
				<version>${fj-doc-version}</version>
			</dependency>	
			
			<dependency>
				<groupId>org.fugerit.java</groupId>
				<artifactId>fj-doc-val-pdfbox</artifactId>
				<version>${fj-doc-version}</version>
			</dependency>	
			
			<dependency>
				<groupId>org.fugerit.java</groupId>
				<artifactId>fj-doc-val-poi</artifactId>
